<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:id="@+id/rlTransporter"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:background="@drawable/white_round_shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.livo.nuo.lib.roundImageView.RoundedImageView
            android:id="@+id/imgProductImagex"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:riv_corner_radius="8dp"
            android:alpha="0.2"
            android:src="@android:color/darker_gray"/>


        <View
            android:id="@+id/tvTitlex"
            android:layout_width="80dp"
            android:layout_height="15dp"
            android:layout_marginBottom="3dp"
            android:alpha="0.2"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/imgProductImagex"
            android:backgroundTint="@android:color/darker_gray"
            android:background="@drawable/white_round_shape" />

        <RelativeLayout
            android:id="@+id/rlReievedOfferx"
            android:layout_toEndOf="@+id/imgProductImagex"
            android:layout_below="@+id/tvTitlex"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">






            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvRecievedOfferx"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:alpha="0.2"
                android:backgroundTint="@android:color/darker_gray"
                android:background="@drawable/white_round_shape"/>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgProductImagex"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPricex"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:alpha="0.2"
                android:text="hfsjhdhvd"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:backgroundTint="@android:color/darker_gray"
                android:background="@drawable/white_round_shape"/>


            <RelativeLayout
                android:id="@+id/rlChatCallSelectx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tvPricex"
                android:layout_centerHorizontal="true"
                android:layout_toStartOf="@+id/tvDetailsx"
                >

                <RelativeLayout
                    android:id="@+id/rlChatx"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_fill_black_10_border"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginStart="12dp"
                    >

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgChatx"
                        android:src="@drawable/chat_grey"
                        android:layout_centerVertical="true"
                        android:layout_width="13dp"
                        android:layout_height="13dp"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvChatx"
                        android:layout_marginStart="5dp"
                        android:text="Chat"
                        android:textSize="11sp"
                        android:layout_toEndOf="@+id/imgChatx"
                        android:fontFamily="@font/barlow_bold"
                        android:textColor="@color/livo_black_30_opacity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlCallx"
                    android:visibility="gone"
                    android:layout_toEndOf="@+id/rlChatx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_fill_black_10_border"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginStart="12dp"
                    >

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgCallx"
                        android:src="@drawable/phone_grey"
                        android:layout_centerVertical="true"
                        android:layout_width="14dp"
                        android:layout_height="14dp"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvCallx"
                        android:layout_marginStart="5dp"
                        android:text="Call"
                        android:textSize="11sp"
                        android:layout_toEndOf="@+id/imgCallx"
                        android:fontFamily="@font/barlow_bold"
                        android:textColor="@color/livo_black_30_opacity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </RelativeLayout>

