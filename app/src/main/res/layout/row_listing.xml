<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/rlrowlisting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/white_fill_black_10_stroke_lesser_round">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerImagex"
            android:layout_width="match_parent"
            android:layout_height="150dp">


            <com.livo.nuo.lib.roundImageView.RoundedImageView
                android:id="@+id/imgshimmerImage"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/grey_round_shape"
                app:riv_corner_radius="13dp" />


        </com.facebook.shimmer.ShimmerFrameLayout>


        <com.livo.nuo.lib.roundImageView.RoundedImageView
            android:id="@+id/imgProductImagex"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/grey_round_shape"
            app:riv_corner_radius="13dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPricex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:background="@drawable/red_right_round_shape"
            android:fontFamily="@font/barlow_bold"
            android:paddingStart="12dp"
            android:paddingTop="5dp"
            android:paddingEnd="12dp"
            android:paddingBottom="5dp"
            android:text="00 KR"
            android:textColor="@color/white"
            android:textSize="16dp" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitlex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgProductImagex"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/barlow_bold"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="16dp" />
    </RelativeLayout>

</RelativeLayout>