<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <RelativeLayout
            android:id="@+id/rlTopMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:padding="5dp">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgBack"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:foregroundGravity="center"
                android:src="@drawable/back_grey" />

            <RelativeLayout
                android:id="@+id/rlReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:background="@drawable/white_fill_black_10_border"
                android:padding="7dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgReportFlag"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_centerVertical="true"
                    android:paddingStart="2dp"
                    android:src="@drawable/flag" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvReport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_toEndOf="@+id/imgReportFlag"
                    android:fontFamily="@font/barlow_bold"
                    android:letterSpacing="0.01"
                    android:paddingEnd="5dp"
                    android:text="@string/report"
                    android:textColor="@color/livo_black_30_opacity"
                    android:textSize="16dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/rlReport"
                android:background="@drawable/white_fill_black_10_border"
                android:padding="7dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgShare"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_centerVertical="true"
                    android:paddingStart="2dp"
                    android:src="@drawable/share_2" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_toEndOf="@+id/imgShare"
                    android:fontFamily="@font/barlow_bold"
                    android:letterSpacing="0.01"
                    android:paddingEnd="5dp"
                    android:text="@string/share"
                    android:textColor="@color/livo_black_30_opacity"
                    android:textSize="16dp" />
            </RelativeLayout>

        </RelativeLayout>


        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlTopMain">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:id="@+id/rlProductImages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp">


                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/vpImages"
                        android:layout_width="match_parent"
                        android:background="@drawable/test_imgsinglelisting"
                        android:layout_height="350dp" />


                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tabsLayout"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/vpImages"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        app:tabBackground="@drawable/tab_selector"
                        app:tabGravity="center"
                        app:tabIndicatorHeight="0dp" />


                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rlProductDescription"
                    android:layout_below="@+id/rlProductImages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp">


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvProductTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/barlow_bold"
                        android:text="Speaker + Plant"
                        android:textColor="@color/black"
                        android:textSize="20dp" />



                    <RelativeLayout
                        android:id="@+id/rlHWWDTitle"
                        android:layout_below="@+id/tvProductTitle"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:gravity="center_horizontal"
                            android:weightSum="4">


                            <RelativeLayout
                                android:id="@+id/rlHeight"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.9">


                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvHeightLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/barlow_semibold"
                                    android:text="@string/height"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/livo_black_30_opacity"
                                    android:textSize="14dp" />


                            </RelativeLayout>

                            <View
                                android:id="@+id/vv1"
                                android:layout_width="1dp"
                                android:layout_height="20dp"
                                android:background="@color/livo_black_30_opacity" />


                            <RelativeLayout
                                android:id="@+id/rlWeight"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.1">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvWidthLabel"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:fontFamily="@font/barlow_semibold"
                                    android:text="@string/width"
                                    android:textAlignment="center"
                                    android:textColor="@color/livo_black_30_opacity"
                                    android:textSize="14dp" />





                            </RelativeLayout>

                            <View
                                android:id="@+id/vv2"
                                android:layout_width="1dp"
                                android:layout_height="20dp"
                                android:background="@color/livo_black_30_opacity" />


                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.1">


                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvDepthLabel"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/barlow_semibold"
                                    android:text="@string/depth"
                                    android:textAlignment="center"
                                    android:textColor="@color/livo_black_30_opacity"
                                    android:textSize="14dp" />


                            </RelativeLayout>

                            <View
                                android:id="@+id/vv3"
                                android:layout_width="1dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="13dp"
                                android:background="@color/livo_black_30_opacity" />

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.9">


                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvWeightLabel"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/barlow_semibold"
                                    android:text="@string/weight"
                                    android:textAlignment="viewEnd"

                                    android:textColor="@color/livo_black_30_opacity"
                                    android:textSize="14dp" />


                            </RelativeLayout>

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlHWWDValue"
                        android:layout_below="@+id/rlHWWDTitle"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="4">


                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.9">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvHeightValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/barlow_semibold"
                                    android:maxLength="3"
                                    android:text="00"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/black"
                                    android:textSize="14dp" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvHeightParam"
                                    android:layout_toEndOf="@+id/tvHeightValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Cm"
                                    android:layout_marginStart="7dp"
                                    android:textSize="14dp"
                                    android:fontFamily="@font/barlow_semibold"
                                    android:textColor="@color/livo_black_30_opacity" />

                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.1">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvWidthValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/barlow_semibold"
                                    android:maxLength="3"
                                    android:text="00"
                                    android:textColor="@color/black"
                                    android:textSize="14dp" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvWidthParam"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="7dp"
                                    android:layout_toEndOf="@+id/tvWidthValue"
                                    android:fontFamily="@font/barlow_semibold"
                                    android:text="Cm"
                                    android:textColor="@color/livo_black_30_opacity"
                                    android:textSize="14dp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center"
                                android:layout_weight="1">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvDepthValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/barlow_semibold"
                                    android:maxLength="3"
                                    android:text="00"
                                    android:textColor="@color/black"
                                    android:textSize="14dp" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvDepthParam"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="7dp"
                                    android:layout_toEndOf="@+id/tvDepthValue"
                                    android:fontFamily="@font/barlow_semibold"
                                    android:text="Cm"
                                    android:textColor="@color/livo_black_30_opacity"
                                    android:textSize="14dp" />

                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:layout_weight="1.0">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvWeightValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/barlow_semibold"
                                    android:maxLength="3"
                                    android:text="00"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/black"
                                    android:textSize="14dp" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvWeightParam"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="7dp"
                                    android:layout_toEndOf="@+id/tvWeightValue"
                                    android:fontFamily="@font/barlow_semibold"
                                    android:text="Kgs"
                                    android:textColor="@color/livo_black_30_opacity"
                                    android:textSize="14dp" />



                            </RelativeLayout>

                        </LinearLayout>

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/rl2PeopleInternal"
                        android:layout_below="@+id/rlHWWDValue"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvTwoPeopleLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/barlow_regular"
                            android:letterSpacing="0.0"
                            android:text="@string/_2_people_needed"
                            android:textColor="@color/black"
                            android:textSize="15dp" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/customSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="8dp"
                            android:checked="false"
                            android:scaleX="1.3"
                            android:scaleY="1.3"
                            android:thumb="@drawable/thumb_blue"
                            app:switchPadding="10dp"
                            app:track="@drawable/track_grey" />


                    </RelativeLayout>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/rlMainMap"
                        android:layout_below="@+id/rl2PeopleInternal"
                        android:layout_marginTop="20dp"
                        android:elevation="2dp"
                        app:cardCornerRadius="10dp"
                        android:saveEnabled="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <fragment
                            android:id="@+id/fmap"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            map:uiScrollGestures="false" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:id="@+id/rlPickupDropOff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rlMainMap"
                        android:layout_marginTop="20dp">


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvPickupLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/barlow_bold"
                            android:text="@string/pick_up_from"
                            android:layout_weight="1"
                            android:textColor="@color/livo_black_30_opacity"
                            android:textSize="14dp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvDropOffLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/barlow_bold"
                            android:text="@string/drop_off_at"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:textColor="@color/livo_black_30_opacity"
                            android:textSize="14dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rlPickupDropOffValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rlPickupDropOff"
                        android:layout_marginTop="7dp">


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvPickupValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/barlow_bold"
                            android:text="Dyssegård Danmark"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:textSize="15dp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvDropOffValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/barlow_bold"
                            android:text="Dyssegård Danmark"
                            android:textColor="@color/black"
                            android:gravity="end"
                            android:layout_weight="1"
                            android:textSize="15dp" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/rlPickDropDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rlPickupDropOffValue"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="30dp">


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/grey_round_shape_with_less_corners"
                            android:padding="10dp">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/imgClock"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/clock" />


                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvPickupDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="5dp"
                                android:layout_toEndOf="@+id/imgClock"
                                android:fontFamily="@font/barlow_bold"
                                android:text="2nd June, 20"
                                android:textColor="@color/black"
                                android:textSize="15dp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/grey_round_shape_with_less_corners"
                            android:padding="10dp">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/imgClock2"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/clock" />


                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvDropOffDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="5dp"
                                android:layout_toEndOf="@+id/imgClock2"
                                android:fontFamily="@font/barlow_bold"
                                android:text="8th june, 20"
                                android:textColor="@color/black"
                                android:textSize="15dp" />

                        </RelativeLayout>

                    </LinearLayout>


                </RelativeLayout>


                <View
                    android:id="@+id/vv8"
                    android:layout_below="@+id/rlProductDescription"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/livo_black_5_opacity"/>

                <RelativeLayout
                    android:id="@+id/rlTransporter"
                    android:layout_below="@+id/vv8"
                    android:visibility="visible"
                    android:layout_marginBottom="15dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/white_round_shape"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <com.livo.nuo.lib.roundImageView.RoundedImageView
                        android:id="@+id/imgProductImage"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_centerVertical="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/grey_round_shape"
                        app:riv_corner_radius="8dp" />


                    <RelativeLayout
                        android:id="@+id/rlTitleStar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/imgProductImage">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:fontFamily="@font/barlow_bold"
                            android:letterSpacing="0.02"
                            android:text="Title"
                            android:textColor="@color/black"
                            android:textSize="17dp" />


                        <!-- <com.livo.nuo.lib.rating_bar.ScaleRatingBar
                            android:id="@+id/rbRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvTitle"
                            app:srb_clickable="false"
                            app:srb_drawableEmpty="@drawable/star_empty"
                            app:srb_drawableFilled="@drawable/star_filled"
                            app:srb_numStars="5"
                            app:srb_rating="0"
                            android:layout_marginTop="5dp"
                            app:srb_starPadding="4dp"
                            app:srb_starHeight="17dp"
                            app:srb_starWidth="17dp" /> -->

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvSendRequest"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvTitle"
                            android:layout_marginTop="18dp"
                            android:background="@drawable/black_round_shape_more_less_corners"
                            android:backgroundTint="@color/colorPrimary"
                            android:fontFamily="@font/barlow_semibold"
                            android:letterSpacing="0.02"
                            android:padding="8dp"
                            android:text="@string/send_request"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:visibility="visible" />


                    </RelativeLayout>



                </RelativeLayout>

            </RelativeLayout>


        </androidx.core.widget.NestedScrollView>


    </RelativeLayout>

</RelativeLayout>